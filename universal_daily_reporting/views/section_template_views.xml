<odoo>
    <record id="view_section_template_tree" model="ir.ui.view">
        <field name="name">daily.manager.section.template.tree</field>
        <field name="model">daily.manager.section.template</field>
        <field name="arch" type="xml">
            <list string="Section Templates" default_order="sequence">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="department_id"/>
                <field name="active"/>
                <field name="sequence" widget="handle"/>
            </list>
        </field>
    </record>

    <record id="view_section_template_form" model="ir.ui.view">
        <field name="name">daily.manager.section.template.form</field>
        <field name="model">daily.manager.section.template</field>
        <field name="arch" type="xml">
            <form string="Section Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="branch_id" options="{'no_create': True}"/>
                            <field name="department_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_section_template_search" model="ir.ui.view">
        <field name="name">daily.manager.section.template.search</field>
        <field name="model">daily.manager.section.template</field>
        <field name="arch" type="xml">
            <search string="Section Templates">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="department_id"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                <filter name="group_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                <filter name="group_department" string="Department" context="{'group_by': 'department_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_section_templates" model="ir.actions.act_window">
        <field name="name">Dynamic Section Templates</field>
        <field name="res_model">daily.manager.section.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section_template_search"/>
        <field name="context">{'default_company_id': uid.company_id, 'default_branch_id': uid.company_id}</field>
    </record>

    <menuitem id="menu_section_templates" name="Dynamic Sections" parent="menu_daily_reporting_configuration" sequence="20"
              action="action_section_templates"
              groups="universal_daily_reporting.group_reporting_admin,universal_daily_reporting.group_branch_manager"/>
</odoo>
