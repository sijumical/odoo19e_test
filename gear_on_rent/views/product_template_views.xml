<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit_gear_on_rent" model="ir.ui.view">
        <field name="name">product.template.form.gear.on.rent</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[last()]" position="after">
                <group string="Gear On Rent">
                    <field name="gear_is_production"/>
                    <field name="gear_workcenter_id" invisible="not gear_is_production"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
