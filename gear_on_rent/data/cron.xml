<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <record id="cron_schedule_due_rmc_orders" model="ir.cron">
      <field name="name">Gear RMC: Schedule Due Monthly Orders</field>
      <field name="model_id" ref="gear_on_rent.model_gear_rmc_monthly_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_schedule_due_orders()</field>
      <field name="user_id" ref="base.user_root"/>
      <field name="interval_type">days</field>
      <field name="interval_number">1</field>
      <field name="active">True</field>
      <field name="priority">5</field>
      <field name="nextcall">1970-01-01 00:30:00</field>
    </record>
    <record id="cron_generate_next_rmc_orders" model="ir.cron">
      <field name="name">Gear RMC: Prepare Upcoming Monthly Orders</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_generate_next_monthly_orders()</field>
      <field name="user_id" ref="base.user_root"/>
      <field name="interval_type">days</field>
      <field name="interval_number">1</field>
      <field name="active">True</field>
      <field name="priority">5</field>
      <field name="nextcall">1970-01-01 01:00:00</field>
    </record>
  </data>
</odoo>
